<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#F3F3F3"
    android:padding="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <!-- Baris Atas: Nama Produk & Jumlah + Icon -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <!-- Nama Produk -->
        <TextView
            android:id="@+id/txvCategory"
            android:text="Wortel"
            android:textColor="@color/green_200"
            android:textSize="16sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:fontFamily="@font/manrope_extrabold"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/txvAmount"
                android:text="3 pcs"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:fontFamily="@font/manrope_extrabold"/>

            <ImageView
                android:id="@+id/imvCheck"
                android:src="@drawable/check"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="6dp"
                android:layout_marginTop="2dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp">

        <!-- Expiry -->
        <TextView
            android:id="@+id/txvExpiry"
            android:text="Expires: 30 June 2025"
            android:textColor="@color/red"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/manrope_extrabold"/>

        <!-- Tombol -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="55dp"
            android:layout_marginTop="4dp">

            <Button
                android:id="@+id/btnEdit"
                android:text="Edit"
                android:backgroundTint="@color/green_fade"
                android:textSize="11sp"
                android:layout_width="88dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/manrope_extrabold"/>

            <Button
                android:id="@+id/btnDiscard"
                android:text="Discard"
                android:backgroundTint="@color/red_fade"
                android:textSize="11sp"
                android:layout_width="88dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/manrope_extrabold"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
