<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/navigation_stocks"
    tools:context=".ui.stocks.StocksFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="#EBF7DF"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="192dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txvStock"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="#307331"
                    android:textStyle="bold"
                    android:textSize="40dp"
                    android:layout_marginTop="70dp"
                    android:layout_marginBottom="30dp"
                    android:layout_marginLeft="55dp"
                    android:layout_marginRight="30dp"
                    android:text="Stock" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imgvSayur"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="70dp"
                android:layout_marginRight="210dp"
                android:layout_marginBottom="30dp"
                android:layout_weight="1"
                android:background="@drawable/sayur" />
        </LinearLayout>

        <!-- Konten lain -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" />
    </LinearLayout>

    <!-- âœ… Tombol dipindahkan ke sini agar tidak tertimpa -->
    <ImageButton
        android:id="@+id/btnAdd"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="end|top"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="20dp"
        android:scaleType="fitCenter"
        android:src="@drawable/plus"
        android:background="@android:color/transparent"
        android:elevation="10dp" />
</FrameLayout>
