<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EBF7DF"
    android:id="@+id/navigation_home"
    tools:context=".ui.home.HomeFragment">


    <!-- Top Curve -->
    <View
        android:id="@+id/top_curve"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:background="@drawable/top_curve_bg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Greeting Text -->
    <TextView
        android:id="@+id/txtGreeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="36sp"
        android:fontFamily="@font/manrope_extrabold"
        android:textColor="#2D7039"
        app:layout_constraintTop_toTopOf="@id/top_curve"
        app:layout_constraintBottom_toBottomOf="@id/top_curve"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="-20dp"/>

    <!-- Highlights Header -->
    <TextView
        android:id="@+id/txtHighlightsHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#2D7039"
        android:text="Highlights"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:fontFamily="@font/manrope_extrabold"
        android:padding="8dp"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/top_curve"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <!-- Highlights Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/highlightCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/txtHighlightsHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="12dp">

            <!-- Column 1 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_marginBottom="50dp"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/expired" />

                <TextView
                    android:id="@+id/txtExpiringSoon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:layout_marginTop="-25dp"
                    android:textSize="20dp"
                    android:fontFamily="@font/manrope_extrabold"
                    android:gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Expiring Soon"
                    android:textSize="14dp"
                    android:gravity="center"
                    android:fontFamily="@font/manrope_bold"/>
            </LinearLayout>

            <!-- Column 2 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_marginBottom="50dp"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ontime" />

                <TextView
                    android:id="@+id/txtUsedOnTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:layout_marginTop="-25dp"
                    android:textSize="20dp"
                    android:fontFamily="@font/manrope_extrabold"
                    android:gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Used On Time"
                    android:textSize="14dp"
                    android:fontFamily="@font/manrope_bold"
                    android:gravity="center" />
            </LinearLayout>

            <!-- Column 3 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_marginBottom="50dp"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/bin" />

                <TextView
                    android:id="@+id/txtWasted"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="20dp"
                    android:layout_marginTop="-25dp"
                    android:fontFamily="@font/manrope_extrabold"
                    android:gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/manrope_bold"
                    android:text="Wasted"
                    android:textSize="14dp"
                    android:gravity="center" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Tips of the Day Section -->
    <LinearLayout
        android:id="@+id/tipsSection"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#EBF7DF"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/highlightCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="16dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tips Of The Day"
                android:fontFamily="@font/manrope_extrabold"
                android:textColor="#1E5722"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Store tomatoes at room temperature for better taste."
                android:textSize="13sp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/manrope_bold"/>

            <Button
                android:id="@+id/btnExplore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Explore"
                android:textSize="12sp"
                android:textColor="#ffffff"
                android:backgroundTint="#88B884"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/manrope_extrabold"/>
        </LinearLayout>

        <ImageView
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:src="@drawable/tomat"
            android:layout_marginStart="12dp"
            android:background="@drawable/rounded_green_box"
            android:padding="6dp"
            android:scaleType="fitCenter" />
    </LinearLayout>

    <!-- Notification Header -->
    <TextView
        android:id="@+id/notificationHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Notifications"
        android:background="#2D7039"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:padding="8dp"
        android:fontFamily="@font/manrope_extrabold"
        app:layout_constraintTop_toBottomOf="@id/tipsSection"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp" />

    <!-- Notifications List -->
    <LinearLayout
        android:id="@+id/notificationList"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/notificationHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:background="#FFFFFF"
            android:text="Wortel is going to expire in 1 day!"
            android:textColor="#000000"
            android:textSize="14sp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/manrope_bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:background="#FFFFFF"
            android:text="Jamur is going to expire in 2 days!"
            android:textColor="#000000"
            android:textSize="14sp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/manrope_bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:background="#FFFFFF"
            android:text="Jamur is going to expire in 2 days!"
            android:textColor="#000000"
            android:textSize="14sp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/manrope_bold"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>