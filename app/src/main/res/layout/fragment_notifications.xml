<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/navigation_notifications"
    tools:context="com.example.pedulipangan.ui.notifications.NotificationsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="#EBF7DF"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txvStock"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="#307331"
                    android:fontFamily="@font/manrope_extrabold"
                    android:textSize="40dp"
                    android:layout_marginTop="70dp"
                    android:layout_marginBottom="30dp"
                    android:layout_marginLeft="55dp"
                    android:layout_marginRight="30dp"
                    android:text="Notifications" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:background="#F3F3F3"
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">
            <TextView
                android:text="Wortel is going expired in 3 days!"
                android:textColor="@color/green_200"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:fontFamily="@font/manrope_extrabold"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:background="#F3F3F3"
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">
            <TextView
                android:text="Tomat is going to expire in 5 days!"
                android:textColor="@color/green_200"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:fontFamily="@font/manrope_extrabold"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:background="#F3F3F3"
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">
            <TextView
                android:text="Jamur is going expired in 2 days!"
                android:textColor="@color/green_200"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:fontFamily="@font/manrope_extrabold"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>